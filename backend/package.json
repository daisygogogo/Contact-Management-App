{
  "name": "Contact-Management-App-Backend",
  "version": "0.0.1",
  "description": "Contact Management App Backend",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepare": "husky install || true",
    "setup": "npm run docker:db && npm run prisma:generate && npm run prisma:migrate:dev && npm run prisma:seed && npm start",
    "start": "nest start --watch",
    "start:prod": "node dist/main",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "prisma:seed": "prisma db seed",
    "prisma:migrate:dev": "prisma migrate dev --preview-feature",
    "prisma:migrate:deploy": "npx prisma migrate deploy --preview-feature",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "prisma db push",
    "lint": "eslint .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "deploy": "fly deploy"
  },
  "dependencies": {
    "@google-analytics/data": "^4.12.0",
    "@nestjs/axios": "3.1.3",
    "@nestjs/cli": "9.5.0",
    "@nestjs/common": "9.4.3",
    "@nestjs/config": "2.3.4",
    "@nestjs/core": "9.4.3",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "9.0.3",
    "@nestjs/platform-express": "9.4.3",
    "@nestjs/swagger": "6.3.0",
    "@nestjs/terminus": "9.2.2",
    "@prisma/client": "5.13.0",
    "@types/bcrypt": "5.0.2",
    "@types/chance": "1.1.6",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/node": "18.19.0",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.2",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "1.7.5",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "express-rate-limit": "7.4.1",
    "fs": "^0.0.1-security",
    "helmet": "7.1.0",
    "joi": "17.13.3",
    "nestjs-prisma": "0.24.0-dev.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "path": "^0.12.7",
    "prisma": "5.13.0",
    "prisma-dbml-generator": "0.12.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1",
    "ts-loader": "9.5.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@eslint/js": "8.56.0",
    "@nestjs/schematics": "9.2.0",
    "@nestjs/testing": "9.4.3",
    "@types/multer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "chance": "1.1.12",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-unicorn": "56.0.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "prettier-eslint": "16.3.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
